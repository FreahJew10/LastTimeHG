        }
    }

    private async void NextDay()
    {
        if (currentDayIndex < 6)
        {
            currentDayIndex++;
        }
        else
        {
            currentDayIndex = 0; // Back to Sunday if needed
            weekStartDate = weekStartDate.AddDays(7);
            await LoadEventsForWeekAsync();
        }
    }
