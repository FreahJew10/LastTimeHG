    private async Task<List<Event>> GetEventsForTimeRange(DateTime start, DateTime end)
    {
        try
        {
            HttpClient httpClient = new HttpClient();
            Models.ModelForAPIIDEndStartDate modelForAPIIDEndStartDate = new ModelForAPIIDEndStartDate(userS.Id, start, end);
            var adiresponse = await httpClient.PostAsJsonAsync(DataConstLink.APIs.calenderurl, modelForAPIIDEndStartDate);
            if (adiresponse.IsSuccessStatusCode)
            {
                events = await adiresponse.Content.ReadFromJsonAsync<List<Event>>();
                return events;
            }
            else
            {
                return new List<Event>();
            }
        }
        catch (Exception e)
        {
            Console.WriteLine(e); 
        }

        return null;

    }

    private async Task PreviousWeek()
