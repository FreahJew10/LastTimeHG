@page "/calender"
@using System.Text.Json;
@inject HttpClient httpClient
@inject NavigationManager navigateMgr
@using Models;
@if (userS!=null)
{

    <h3>Custom Weekly Scheduler for @userS.first_name</h3>
    <div class="scheduler-header">
        <button @onclick="PreviousDay">⬅️</button>
        <h4>@weekStartDate.AddDays(currentDayIndex).ToString("dddd, MMM dd")</h4>
        <button @onclick="NextDay">➡️</button>
    </div>

    <div class="scheduler-grid">
        @foreach (Event evt in events.Where(e => e.date.Date == weekStartDate.AddDays(currentDayIndex).Date))
        {
            <div class="time-slot">
                <strong>@evt.date.ToString("HH:mm")</strong> - @evt.kinofevent - @evt.eventname
            </div>
        }
    </div>
}
