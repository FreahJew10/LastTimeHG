    private async Task LoadEventsForWeekAsync()
    {
        if (userS != null)
        {
            isLoading = true;

            DateTime startOfWeek = weekStartDate;
            DateTime endOfWeek = weekStartDate.AddDays(7);

            List<Event> fetchedEvents = await GetEventsForTimeRange(startOfWeek, endOfWeek);
