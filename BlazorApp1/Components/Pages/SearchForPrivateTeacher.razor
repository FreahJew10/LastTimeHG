</style>


@code {
    teacherDB TeacherDB = new teacherDB();
    SubjectDB SubjectDB = new SubjectDB();
    private bool SortAscending { get; set; } = true;  // Default sort order
    private string SearchQuery { get; set; } = string.Empty;
    private string SelectedSubject { get; set; } = string.Empty;
    private int? MaxHourlyRate { get; set; } = 0;
    private bool IsPrivateOnly { get; set; } = false;
    private List<Subject> Subjects { get; set; } = new List<Subject>();
    private List<Teacher> SearchResults { get; set; } = new List<Teacher>();
    private List<Teacher> PaginatedResults =>
     (SortAscending
         ? SearchResults.OrderBy(t => t.hourly_rate)
         : SearchResults.OrderByDescending(t => t.hourly_rate))
     .Skip((CurrentPage - 1) * PageSize)
     .Take(PageSize)
     .ToList();
    private int CurrentPage { get; set; } = 1;
    private int PageSize { get; set; } = 4;
    private int TotalPages => (int)Math.Ceiling((double)(SearchResults?.Count ?? 0) / PageSize);
    private bool SearchExecuted { get; set; } = false;

    private Student userS = null;
    protected override async Task OnInitializedAsync()
    {
        Subjects = await SubjectDB.SelectAllSubjects();
    }
    private void ToggleSort()
    {
        SortAscending = !SortAscending;   // Flip between true and false
        CurrentPage = 1;  // Optional: reset to first page after sorting
    }

    private async Task SearchTeachers()
    {
        if (!string.IsNullOrEmpty(SelectedSubject))
        {
            int mysub = 0;
            SearchResults = await TeacherDB.GetAllPrivateTeachersForThisSubjectId(int.Parse(SelectedSubject), int.Parse(MaxHourlyRate.ToString()));



        }
        else
        {
            ToastService.ShowError("choose a subject");
        }
        CurrentPage = 1;
        SearchExecuted = true;
    }
    private async Task SearchForAllTeachersinsubject()
    {
        if (!string.IsNullOrEmpty(SelectedSubject))
        {
            int mysub = 0;
            SearchResults = await TeacherDB.GetAllPrivateTeachersForThisSubjectId(int.Parse(SelectedSubject));

        }
        else
        {

            ToastService.ShowError("choose a subject");
        }
        CurrentPage = 1;
        SearchExecuted = true;
    }

    private void ChangePage(int newPage)
    {
        if (newPage >= 1 && newPage <= TotalPages)
        {
            CurrentPage = newPage;
        }
    }
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            var user1 = await MySession.GetAsync<Student>("student");
            if (user1.Success)
            {
                userS = user1.Value;

                StateHasChanged();
            }
            else
            {
                navigationManager.NavigateTo("/");
            }
        }
    }
}
