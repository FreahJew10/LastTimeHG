@page "/teacher-search"

@using System.Linq;
@using Models;
@using DBL;
@inject IJSRuntime js
@using Microsoft.AspNetCore.Components.Server.ProtectedBrowserStorage

@inject ProtectedSessionStorage MySession
@inject Microsoft.AspNetCore.Components.NavigationManager navigationManager
@using Microsoft.AspNetCore.SignalR.Client
@using Blazored.Toast.Services
@inject IToastService ToastService


<HeadContent>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>so this is it? </title>

</HeadContent>
<div>
    <div class="container">
        <h3>Search for Teachers</h3>
        <form class="search-bar" onsubmit="return false;">
            <button type="button" @onclick="SearchForAllTeachersinsubject">get all teacher subject</button>
            <button type="button" @onclick="SearchTeachers">Search</button>
        </form>
        <div class="filter-section">
            <label for="subjectFilter">Filter by Subject:</label>
            <select id="subjectFilter" @bind="SelectedSubject">
                <option value="">select Subject</option>
                @foreach (Subject subject in Subjects)
                {
                    <option value="@subject.subjectid">@subject.subjectName</option>
                }
            </select>
            <label for="hourlyRate">Max Hourly Rate:</label>
            <input type="number" id="hourlyRate" @bind="MaxHourlyRate" min="0">
            <label>
                <input type="checkbox" @bind="IsPrivateOnly"> Private Teachers Only
            </label>
        </div>
        @if (SearchResults?.Any() ?? false)
        {
            
            <div class="results">
                <h4>Results:</h4>
                <button @onclick="ToggleSort">
                    Sort by Hourly Rate @(SortAscending ? "(Low to High)" : "(High to Low)")
                </button>
                <ul>
                    @foreach (Teacher teacher in PaginatedResults)
                    {
                        <li>
                            <strong>@teacher.first_name @teacher.last_name</strong><br />
                            Hourly Rate: $@teacher.hourly_rate<br />
                            <a href="ViewTeacherProfileAndRequest/@teacher.Id">set a meeting </a>
                        </li>
                    }
                </ul>
                <div class="pagination">
                    <button @onclick="() => ChangePage(CurrentPage - 1)" disabled="@(CurrentPage == 1)">Previous</button>
                    <span>Page @CurrentPage of @TotalPages</span>
                    <button @onclick="() => ChangePage(CurrentPage + 1)" disabled="@(CurrentPage == TotalPages)">Next</button>
                </div>
            </div>
        }
        else if (SearchExecuted)
        {
            <p>No results found.</p>
        }
    </div>
</div>
