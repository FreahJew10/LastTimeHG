@page "/reg"
@using Models;
@using DBL;
@inject IJSRuntime js
@using Microsoft.AspNetCore.Components.Server.ProtectedBrowserStorage
@inject ProtectedSessionStorage MySession
@inject Microsoft.AspNetCore.Components.NavigationManager navigationManager
<br>
<br>
<div class="background">
    <div class="shape"></div>
    <div class="shape"></div>
</div>
<div class="cont">
    <div class="form sign-in">
        <h2>Create your Account student</h2>
        <label>
            <span>Name</span>
            <input @bind-value="first_name" type="text" />
        </label>
        <label>
            <span>last name</span>
            <input @bind-value="last_name" type="text" />
        </label>
        <label>
            <span>Email</span>
            <input @bind-value="email" />
        </label>
        <label>
            <span>Password</span>
            <input @bind-value="password" type="password" />
        </label>
        <button type="button" class="submit" @onclick="regstudent">Sign Up</button>
    </div>
    <div class="sub-cont">
        <div class="img">
            <div class="img__text m--up">

                <h3>so you are a student? Please Sign up!</h3>
            </div>
            <div class="img__text m--in">

                <h3> your are a teacher so sigh up.</h3>
            </div>
            <div class="img__btn">
                <span class="m--up">if teacher</span>
                <span class="m--in">if student</span>
            </div>
        </div>
        <div class="form sign-up">
            <h2>Create your Account teacher</h2>
            <label>
                <span>Name</span>
                <input @bind-value="first_name" type="text" />
            </label>
            <label>
                <span>Name</span>
                <input @bind-value="last_name" type="text" />
            </label>
            <label>
                <span>Email</span>
                <input @bind-value="email" />
            </label>
            <label>
                <span>Password</span>
                <input @bind-value="password" type="password" />
            </label>

            <label>
                <span>are you private teacher (optional but "yes" is defult)</span>
                <select @onchange="onChange" class="form-select" data-control="select2" data-placeholder="Select an option">
                    <option value="1">yes</option>
                    <option value="0">no</option>
                </select>
                <button type="button" class="submit" @onclick="regteacher">Sign Up</button>
            </label>
            


        </div>
        <h3>@msg</h3>
    </div>
</div>

<script>
    document.querySelector('.img__btn').addEventListener('click', function () {
        document.querySelector('.cont').classList.toggle('s--signup');
    });
</script>
<style>
    *,
    *:before,
    *:after {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
    }

    body {
        font-family: 'Open Sans', Helvetica, Arial, sans-serif;
        background-color: #0f172a;
        color: #f9fafb;
        overflow-x: hidden;
    }

    .background {
        width: 100%;
        height: 100%;
        position: absolute;
        z-index: -1;
    }

        .background .shape {
            height: 200px;
            width: 200px;
            position: absolute;
            border-radius: 50%;
        }

    .shape:first-child {
        background: linear-gradient(#1845ad, #23a2f6);
        left: -100px;
        top: -100px;
    }

    .shape:last-child {
        background: linear-gradient(to right, #ff512f, #f09819);
        right: -80px;
        bottom: -80px;
    }

    .cont {
        width: 900px;
        height: 600px;
        margin: 80px auto;
        border-radius: 20px;
        background: #1e293b;
        display: flex;
        overflow: hidden;
        position: relative;
        transition: all 1s ease-in-out;
        box-shadow: 0 0 30px rgba(0, 0, 0, 0.5);
    }

    /* Student and Teacher form panels */
    .form {
        width: 640px;
        padding: 40px 30px;
        position: absolute;
        top: 0;
        transition: all 1.2s ease-in-out;
        height: 100%;
        overflow-y: auto;
    }

    .sign-in {
        left: 0;
        z-index: 2;
    }

    .sign-up {
        left: 100%;
        opacity: 0;
        pointer-events: none;
        z-index: 1;
    }

    .cont.s--signup .sign-in {
        left: -100%;
        opacity: 0;
        pointer-events: none;
        z-index: 1;
    }

    .cont.s--signup .sign-up {
        left: 0;
        opacity: 1;
        pointer-events: auto;
        z-index: 2;
    }

    /* Sidebar Switch */
    .sub-cont {
        width: 100%;
        padding-left: 640px;
        height: 100%;
        position: absolute;
        top: 0;
        left: 0;
        display: flex;
        justify-content: flex-end;
    }

    .img {
        width: 260px;
        background: #0f172a;
        position: relative;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        padding-top: 80px;
    }

    .img__text {
        color: #f9fafb;
        text-align: center;
        padding: 0 10px;
    }

        .img__text h3 {
            font-size: 1rem;
            font-weight: 500;
            margin-bottom: 10px;
        }

    .img__btn {
        position: relative;
        width: 140px;
        height: 40px;
        margin-top: 20px;
        border: 2px solid #f9fafb;
        border-radius: 30px;
        color: #f9fafb;
        font-size: 13px;
        text-transform: uppercase;
        overflow: hidden;
        cursor: pointer;
        background-color: transparent;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: border-color 0.3s ease;
    }

        .img__btn:hover {
            border-color: #60a5fa;
        }

        /* Inner spans */
        .img__btn span {
            position: absolute;
            width: 100%;
            height: 100%;
            display: flex;
            align-items: center;
            justify-content: center;
            transition: transform 1.2s ease-in-out;
            pointer-events: none;
        }

            /* Student (default) up view */
            .img__btn span.m--in {
                transform: translateY(-100%);
            }

            /* Teacher (visible) */
            .img__btn span.m--up {
                transform: translateY(0%);
            }

    /* On toggle flip */
    .cont.s--signup .img__btn span.m--in {
        transform: translateY(0%);
    }

    .cont.s--signup .img__btn span.m--up {
        transform: translateY(100%);
    }
    /* Form elements */
    h2 {
        text-align: center;
        font-size: 24px;
        color: #60a5fa;
        margin-bottom: 20px;
    }

    label {
        display: block;
        width: 260px;
        margin: 20px auto 0;
        text-align: left;
    }

        label span {
            display: block;
            font-size: 12px;
            color: #9ca3af;
            margin-bottom: 6px;
            text-transform: uppercase;
        }

    input,
    select {
        width: 100%;
        padding: 10px;
        font-size: 14px;
        border-radius: 6px;
        border: 1px solid #334155;
        background: #1f2937;
        color: #f1f5f9;
        outline: none;
        transition: border-color 0.3s ease;
    }

        input:focus,
        select:focus {
            border-color: #3b82f6;
            background: #1e293b;
        }

    .submit {
        width: 260px;
        margin: 30px auto 0;
        padding: 10px;
        background-color: #3b82f6;
        color: white;
        border: none;
        border-radius: 25px;
        font-size: 14px;
        font-weight: bold;
        text-transform: uppercase;
        cursor: pointer;
        transition: background-color 0.3s;
    }

        .submit:hover {
            background-color: #60a5fa;
        }

    h3 {
        font-size: 1rem;
        text-align: center;
        color: #f87171;
        margin-top: 20px;
    }

</style>
