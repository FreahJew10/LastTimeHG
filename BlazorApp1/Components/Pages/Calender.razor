<h3>Custom Weekly Scheduler</h3>

<h3>Scheduler</h3>
<div class="calendar">
    <div class="timeline">
        <div class="spacer"></div>
        <div class="time-marker">9 AM</div>
        <div class="time-marker">10 AM</div>
        <div class="time-marker">11 AM</div>
        <div class="time-marker">12 PM</div>
        <div class="time-marker">1 PM</div>
        <div class="time-marker">2 PM</div>
        <div class="time-marker">3 PM</div>
        <div class="time-marker">4 PM</div>
        <div class="time-marker">5 PM</div>
        <div class="time-marker">6 PM</div>
    </div>
    <div class="days">
        @foreach (var day in GetDaysInWeek())
        {
            <div class="day">
                <div class="date">
                    <p class="date-num">@day.ToString("dd")</p>
                    <p class="date-day">@day.ToString("ddd")</p>
                </div>
                <div class="events">
                    @foreach (var ev in GetEventsForDay(day))
                    {
                        <div class="event" style="grid-row-start:@(ev.date.Hour); grid-row-end:@(ev.date.Hour + 2);" @onclick="() => EditEvent(ev)">
                            <p class="title">@ev.eventname</p>
                            <p class="time">@ev.date.ToString("h tt") - @(ev.date.AddHours(2).ToString("h tt"))</p>
                        </div>
                    }
                </div>
            </div>
        }
    </div>
</div>

<EditForm Model="currentEvent" OnValidSubmit="SaveEvent">
    <DataAnnotationsValidator />
    <ValidationSummary />
    <label>Title: <InputText @bind-Value="currentEvent.eventname" /></label>
    <label>Start Time: <InputDate @bind-Value="currentEvent.date" /></label>
    <button type="submit">Save Event</button>
</EditForm>

<button @onclick="DeleteEvent">Delete Event</button>

