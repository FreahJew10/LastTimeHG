        }

        .btn-invite-confirm {
        background-color: #007bff;
        color: white;
        border: none;
        padding: 10px 15px;
        border-radius: 5px;
        cursor: pointer;
        transition: background 0.3s;
        width: 100%;
        margin-top: 10px;
        }

        .btn-invite-confirm:hover {
        background-color: #0056b3;
        }

    </style>

}

